<configuration>

    <property name="myPattern"
              value="%-24(%d{dd MMM YYYY HH:mm:ss.SSS}) %-5level %-25(%file:%line) -> %msg%n" />

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <charset>UTF-8</charset>
            <pattern>${myPattern}</pattern>
        </encoder>
    </appender>

    <appender name="ROLLING_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/formatters.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/formatters-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
            <timeBasedFileNamingAndTriggeringPolicy
                    class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>5MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
        <encoder>
            <charset>UTF-8</charset>
            <pattern>${myPattern}</pattern>
        </encoder>
    </appender>

    <!--logger names are given in class files-->
    <logger name="SqlFormatter" level="debug">
        <appender-ref ref="ROLLING_FILE" />
        <appender-ref ref="STDOUT" />
    </logger>

</configuration>
